{
  "name": "blecon-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "lint": "jshint --reporter=node_modules/jshint-stylish app.js routes/*.js models/*.js || true",
    "test:w": "mocha tests --watch",
    "dev": "mongo_server=$mongo_server mongo_port=$mongo_port mongo_user=$mongo_user mongo_pwd=$mongo_pwd mongo_db=$mongo_db DEBUG=blecon-api:* PORT=3000 NODE_ENV=development nodemon bin/www",
    "start:dev": "concurrently \"npm run dev\" \"npm run lint\" "
  },
  "engines": {
    "node": ">= 4.2.1 <= 5",
    "npm": ">= 3"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "express": "~4.13.1",
    "express-brute": "^0.7.0-beta.0",
    "express-session": "^1.13.0",
    "helmet": "^2.1.1",
    "jsonwebtoken": "^7.0.1",
    "mongoose": "^4.5.1",
    "mongoose-validator": "^1.2.5",
    "morgan": "~1.6.1",
    "node-restful": "^0.2.5",
    "node-uuid": "^1.4.7",
    "passport": "^0.3.2",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "serve-favicon": "~2.3.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "debug": "~2.2.0",
    "gulp": "^3.9.1",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0"
  }
}
